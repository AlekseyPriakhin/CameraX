<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <androidx.camera.view.PreviewView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </androidx.camera.view.PreviewView>

    <Button
        android:id="@+id/btn_action"
        android:layout_width="90dp"
        android:layout_height="52dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="660dp"
        android:text="@string/takePhoto"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_camera_change"
        android:layout_width="90dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="660dp"
        android:text="Сменить камеру"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/btn_action"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_switch_action"
        android:layout_width="90dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="660dp"
        android:text="Видео"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/btn_camera_change"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_to_gallery"
        android:layout_width="90dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="660dp"
        android:text="Галерея"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/btn_switch_action"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>